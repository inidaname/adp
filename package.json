{
    "name": "adpmicroservice",
    "version": "1.0.0",
    "description": "Micro service for ADP",
    "main": "dist/services/authentication/app.js",
    "scripts": {
        "start": "npm run serve",
        "build": "&& npm run build-ts && npm run lint && npm run copy-static-assets",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/app.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adpnigeria/adpmicroservice.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/adpnigeria/adpmicroservice/issues"
    },
    "homepage": "https://github.com/adpnigeria/adpmicroservice#readme",
    "dependencies": {
        "async": "^3.2.0",
        "bcrypt-nodejs": "0.0.3",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-session": "^1.17.0",
        "express-validator": "^6.4.0",
        "helmet": "^3.21.3",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.24.0",
        "mongoose": "^5.9.2",
        "mongoose-unique-validator": "^2.0.3",
        "morgan": "^1.9.1",
        "node-cron": "^2.0.3",
        "node-fetch": "^2.6.0",
        "nodemailer": "^6.4.4"
    },
    "devDependencies": {
        "@types/async": "^3.0.8",
        "@types/bcrypt-nodejs": "0.0.31",
        "@types/bcryptjs": "^2.4.2",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^8.2.0",
        "@types/errorhandler": "^1.5.0",
        "@types/express": "^4.17.2",
        "@types/express-session": "^1.17.0",
        "@types/express-validator": "^3.0.0",
        "@types/helmet": "0.0.45",
        "@types/jsonwebtoken": "^8.3.8",
        "@types/moment": "^2.13.0",
        "@types/mongoose": "^5.7.3",
        "@types/mongoose-unique-validator": "^1.0.3",
        "@types/morgan": "^1.9.0",
        "@types/node-cron": "^2.0.3",
        "@types/nodemailer": "^6.4.0",
        "chai": "^4.2.0",
        "concurrently": "^5.1.0",
        "nodemon": "^2.0.2",
        "ts-node": "^8.6.2",
        "typescript": "^3.8.3"
    }
}
